{
  "name": "ts-react-parcel",
  "version": "1.8.0",
  "description": "Typescript with React, using parcel bundler",
  "repository": {
    "type": "git",
    "url": "https://github.com/adhrinae/ts-react-parcel"
  },
  "author": "Ahn Dohyung",
  "license": "MIT",
  "main": "src/index.tsx",
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start": "parcel ./src/index.html",
    "build": "npm run type-check && parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch --skipLibCheck"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.10",
    "@slate-editor/link-plugin": "^5.1.0",
    "@types/node": "^7.0.5",
    "anime": "^0.1.2",
    "animejs": "^3.0.1",
    "draft-js": "^0.10.5",
    "draft-js-raw-content-state": "^1.2.7",
    "fs-extra": "^7.0.1",
    "grommet": "^2.6.5",
    "grommet-icons": "^4.2.0",
    "grommet-styles": "^0.2.0",
    "helpful-decorators": "^1.7.2",
    "immutable": "^4.0.0-rc.12",
    "is-hotkey": "^0.1.4",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.11",
    "polished": "^3.1.0",
    "prop-types": "^15.7.2",
    "react": "16.8.4",
    "react-addons-css-transition-group": "^15.6.2",
    "react-desc": "^4.1.2",
    "react-dom": "^16.8.6",
    "react-emotion": "^10.0.0",
    "react-pose": "^4.0.8",
    "react-transition-group": "2.4.0",
    "slate": "^0.44.12",
    "slate-react": "^0.21.18",
    "styled-components": "^4.2.0",
    "ts-optchain": "^0.1.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^5.9.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.4000"
  }
}
